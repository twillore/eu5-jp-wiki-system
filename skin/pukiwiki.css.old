/* ===============================================
   Mobile Off-Canvas Menu
 ゆいかせ2025/9/23
   =============================================== */
@media (max-width: 767px) {

    /* 1. ボタンを、表示し、スタイリングする */
    #menu-button {
        display: block;
        position: fixed;
        top: 10px;
        left: 10px;
        z-index: 1000;
        font-size: 24px;
        padding: 5px 10px;
        background: rgba(255,255,255,0.8);
        border: 1px solid #ccc;
        border-radius: 5px;
        cursor: pointer;
    }

    /* 2. メニューバーを、画面の外に、隠す */
    div#menubar {
        position: fixed;
        top: 0;
        left: 0;
        height: 100%;
        width: 250px; /* メニューの幅 */
        background: #fdfaf4;
        transform: translateX(-100%); /* 画面の左外へ、完全に移動 */
        transition: transform 0.3s ease; /* 滑らかな動きを、定義 */
        z-index: 999;
        overflow-y: auto; /* 内容が多い場合に、スクロールさせる */
    }

    /* 3. 「menu-open」クラスが付与された時に、メニューバーを、表示する */
    body.menu-open div#menubar {
        transform: translateX(0); /* 元の位置へ、戻す */
    }
}

/* PCでは、ボタンを、隠す */
@media (min-width: 768px) {
    #menu-button {
        display: none;
    }
}



